<Window x:Class="Deal_or_No_Deal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Deal_or_No_Deal"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        MinHeight="620" MaxHeight="620"
        MinWidth="800" MaxWidth="800">

    <Window.Background>
        <ImageBrush ImageSource="Arrow background.jpg"/>
    </Window.Background>

    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Visibility="Collapsed"/>
        <ContentControl x:Name="MainContent" Visibility="Visible">
            <StackPanel HorizontalAlignment="Center" Height="584" VerticalAlignment="Center" Width="592">
            <Image x:Name="imgRules" Source="Rules.jpg" Height="406" Width="592" Margin="0,40,0,15" />
            <Button x:Name="btnStart" Height="62" Width="592" Click="BtnStart_Click" Content="Play Now" FontWeight="Bold" FontSize="32" Background="DeepSkyBlue"/>
        </StackPanel>
        </ContentControl>
    </Grid>
</Window>